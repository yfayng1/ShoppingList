<!DOCTYPE html>
<html>
<head>
  <title>Shopping List</title>

  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="all">
  <div id="header">
    <h1><span class="intro">Shopping List</span></h1>
  </div>
  <div id="content">
    <% if alerted = alert %>
        <p id="alert"><%= alerted %></p>
    <% end %>
    <%= yield %>
  </div>
</div>
</body>
</html>